<h3>Dokumentenliste</h3>

<table class="datatable">
  <thead>
    <tr>
      <th>Titel</th>
      <th>Beschreibung</th>
      <th>Kategorie</th>
      <th>Kurs</th>
      <th>Von</th>
      <th></th>
      <% if current_user.admin? %>
          <th></th>
          <th></th>
          <th></th>
      <% end %>
    </tr>
  </head>
  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.description %></td>
        <td><%= page.category %></td>
        <td><%= page.lecture %></td>
        <td><%= page.user %></td>
        <td><%= link_to raw('<i class="fi-upload dark-green icon-normal"></i>'), title: "Dokument herunterladen", download_page_path(page) %></td>
        <% if current_user.admin? %>
          <td><%= link_to raw('<i class="fi-eye dark-green icon-normal"></i>'), title: "Dokument anzeigen", page %></td>
          <td><%= link_to raw('<i class="fi-pencil dark-green icon-normal"></i>'), title: "Dokument editieren", edit_page_path(page) %></td>
          <td><%= link_to raw('<i class="fi-trash dark-green icon-normal"></i>'), title: "Dokument entfernen", page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="panel callout radius">
  <h5><%= link_to 'Neue Datei einstellen', new_page_path %></h5>
</div>

